extends layout

block content
  
  body
    .container
      .register.well.col-md-6.col-md-offset-3
        form(role='form')
          .form-group.col-md-6
            label(for='Username') Username
            input#Username.form-control(type='Username', placeholder='Username')
          .form-group.col-md-6
            label(for='Email') Email
            input#Email.form-control(type='Email', placeholder='Email')
          .form-group.col-md-6
            label(for='Firstname') First Name
            input#Firstname.form-control(type='First Name', placeholder='First Name')
          .form-group.col-md-6
            label(for='Lastname') Last Name
            input#LastName.form-control(type='Last Name', placeholder='Last Name')
          .form-group.col-md-6
            label(for='Password') Password
            input#Password.form-control(type='Password', placeholder='Password')
          .form-group.col-md-6
            label(for='Confirmpassword') Confirm Password
            input#Confirmpassword.form-control(type='Confirmpassword', placeholder='Confirm Password')
          .form-group.col-md-6
            input.form-control(type='submit', value='Register')