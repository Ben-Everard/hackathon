extends layout

block content
  
  body
    .container
      .profile.col-md-6
          h4 User Profile
          img(src='http://placedog.com/200/250', alt='')
          h1 Name
          .lender.thumbnail
            .credit
                h5 ************9999
                h5 Current Goal: $25.00 
            a.btn.btn-primary.col-md-6(href='#', role='button') Goal Change

          a.btn.btn-primary.col-md-4(href='#', role='button') Add Card

        .row 
          .lent.well.col-md-4
            a.pull-left(href='#')
              img.media-object(src='http://placedog.com/100/100', alt='')
            .caption
              .media-body
                p= names
                p= funded_amount
                p= loan_amount
                 .progress.progress-striped
                  .progress-bar.progress-bar-success(role='progressbar', aria-valuenow='40', aria-valuemin='0', aria-valuemax='100', style='width: 40%;')
                    span.sr-only 40% Complete (success)
                p
                  a.btn.btn-primary(href='#', role='button') Button
